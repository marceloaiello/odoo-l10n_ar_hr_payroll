<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract.hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contracxt.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='main_info']" position="inside">
                <group name='hr_contract_overtime' string="Horas Extra">
                    <field name="allow_extra_hours" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="hr_attendance.view_attendance_tree" model="ir.ui.view">
        <field name="name">hr.attendance.view.tree.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='worked_hours']" position="after">
                <field name="attendance_overtime" string="Horas Extra" widget="float_time" modifiers="{'readonly':true}"/>
            </xpath>
        </field>
    </record>
</odoo>

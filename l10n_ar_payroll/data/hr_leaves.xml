<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="leaves_WORK0" model="hr.leave.type">
            <field name="name">Ausencias (no pagas)</field>
            <field name="code">WORK0</field>
            <field name="request_unit">hour</field>
            <field name="include_in_theoretical">true</field>
            <field name="allocation_type">no</field>
            <field name="leave_validation_type">hr</field>
            <field name="create_calendar_meeting">true</field>
            <field name="color_name">red</field>
            <field name="exclude_public_holidays">true</field>
            <field name="company_id" ref="base.main_company" />
        </record>
        <record id="leaves_WORK0J" model="hr.leave.type">
            <field name="name">Ausencias (pagadas / justificadas)</field>
            <field name="code">WORK0J</field>
            <field name="request_unit">hour</field>
            <field name="include_in_theoretical">true</field>
            <field name="allocation_type">fixed_allocation</field>
            <field name="leave_validation_type">hr</field>
            <field name="create_calendar_meeting">true</field>
            <field name="color_name">lightpink</field>
            <field name="exclude_public_holidays">true</field>
            <field name="company_id" ref="base.main_company" />
        </record>
        <record id="leaves_LEGALHOL" model="hr.leave.type">
            <field name="name">Vacaciones Legales (pagadas)</field>
            <field name="code">LHOL</field>
            <field name="request_unit">day</field>
            <field name="include_in_theoretical">false</field>
            <field name="allocation_type">fixed</field>
            <field name="leave_validation_type">both</field>
            <field name="create_calendar_meeting">true</field>
            <field name="color_name">lightcyan</field>
            <field name="exclude_public_holidays">false</field>
            <field name="company_id" ref="base.main_company" />
        </record>
    </data>
</odoo>

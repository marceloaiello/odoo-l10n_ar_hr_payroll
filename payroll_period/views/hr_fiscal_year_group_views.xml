<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_fiscalyear_group_form" model="ir.ui.view">
        <field name="name">hr.fiscalyear.group.form</field>
        <field name="model">hr.fiscalyear.group</field>
        <field name="arch" type="xml">
            <form string="AÃ±o Fiscal">
                <header>
                    <button name="compute_suss" string="Computar AFIP-SUSS" type="object" class="oe_highlight" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="company_id" groups="base.group_multi_company" />
                            <field name="period_ids" widget="many2many_tags" />
                        </group>
                    </group>
                    <notebook>
                        <page name="payslips" string="Liquidaciones">
                            <field name="payslip_ids" />
                        </page>
                        <page name="afip_suss" string="AFIP SUSS - por empleado">
                                <field name="suss_item_ids">
                                    <tree>
                                        <field name='employee_id' />
                                        <field name='sueldo' />
                                        <field name='adicionales' />
                                        <field name='horas_extra' />
                                        <field name='vacaciones' />
                                        <field name='sac' />
                                        <field name='premios' />
                                        <field name='plus_zona_desfavorable' />
                                        <field name='maternidad' />
                                        <field name='incremento_salarial' />
                                        <field name='no_remunerativo' />
                                        <field name='rectificativa_remuneracion' />
                                        <field name='subtotal_bruto' />
                                        <field name='subtotal_no_remunerativo' />
                                        <field name='subtotal_descuentos' />
                                        <field name='subtotal_neto' />
                                    </tree>
                                </field>
                            </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_hr_fiscalyear_group_tree" model="ir.ui.view">
        <field name="name">hr.fiscalyear.view.tree</field>
        <field name="model">hr.fiscalyear.group</field>
        <field name="arch" type="xml">
            <tree string="Grupos de Periodos Fiscales">
                <field name="name" />
                <field name="period_ids" widget="many2many_tags" />
            </tree>
        </field>
    </record>
    <record id="action_hr_fiscalyear_group" model="ir.actions.act_window">
        <field name="name">Grupos de Periodos Fiscales</field>
        <field name="res_model">hr.fiscalyear.group</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_action_hr_fiscalyear_group_configuration" action="action_hr_fiscalyear_group" parent="hr_period_configure" sequence="27" />
</odoo>

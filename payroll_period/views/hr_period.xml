<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_period_form" model="ir.ui.view">
        <field name="name">hr.period.form</field>
        <field name="model">hr.period</field>
        <field name="arch" type="xml">
            <form string="Periodos de Payroll">
                <header>
                    <button name="action_compute_suss" string="Calcular AFIP-SUSS" type="object" states="open" class="oe_highlight" />
                    <button name="button_open" string="Abrir Periodo" type="object" states="draft" />
                    <button name="button_re_open" string="Reabrir Periodo" type="object" states="done" />
                    <button name="button_close" string="Cerrar Periodo" type="object" states="open" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,open,done" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="fiscalyear_id" widget="selection" />
                            <label for="date_start" string="Duration" />
                            <div>
                                <field name="date_start" nolabel="1" class="oe_inline" />
                                -
                                <field name="date_stop" nolabel="1" class="oe_inline" />
                            </div>
                            <field name="date_payment" />
                        </group>
                        <group>
                            <field name="schedule_pay" />
                            <field name="number" />
                            <field name="company_id" widget="selection" groups="base.group_multi_company" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Liquidaciones">
                            <separator string="Liquidaciones de Haberes" />
                            <newline />
                            <field name="payslip_ids" nolabel="1">
                                <tree>
                                    <field name="number" />
                                    <field name="employee_id" />
                                    <field name="name" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </page>
                        <page string="AFIP SICOSS (F931)">
                            <separator string="Liquidacion AFIP-SICOSS del Periodo" />
                            <newline />
                            <field name="afip_suss_item_ids" nolabel="1">
                                <tree>
                                    <field name="employee_id" widget="many2one_avatar_employee"/>
                                    <field name="sueldo" sum="Total Sueldo"/>
                                    <field name="adicionales" sum="Total Adicionales"/>
                                    <field name="horas_extra" sum="Total Horas Extra"/>
                                    <field name="vacaciones" sum="Total Vacaciones"/>
                                    <field name="plus_zona_desfavorable" string="Plus ZD(*)" sum="Total ZD"/>
                                    <field name="sac" sum="Total S.A.C"/>
                                    <field name="premios" sum="Total Premios"/>
                                    <field name="no_remunerativo" sum="Total No Remunerativo"/>
                                    <field name="maternidad" sum="Total Maternidad"/>
                                    <field name="incremento_salarial" string="Incsal" sum="Total Incsal"/>
                                    <field name="rectificativa_remuneracion" string="Rectificativa" sum="Total Rectificativa"/>
                                    <field name="subtotal_bruto" string="Total Bruto" decoration-success="1" decoration-bf="1" sum="Total Bruto"/>
                                    <field name="subtotal_no_remunerativo" string="Total NoRem" decoration-success="1" decoration-bf="1" sum="Total No Remunerativo"/>
                                    <field name="subtotal_descuentos" string="Total Descuentos" decoration-danger="1" decoration-bf="1" sum="Total Descuentos"/>
                                    <field name="subtotal_neto" string="Total Neto" decoration-info="1" decoration-bf="1" sum="Total Neto"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_hr_period_tree" model="ir.ui.view">
        <field name="name">hr.period.view.tree</field>
        <field name="model">hr.period</field>
        <field name="arch" type="xml">
            <tree string="Periodo de Payroll">
                <field name="name" />
                <field name="date_start" />
                <field name="date_stop" />
                <field name="date_payment" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="view_hr_period_search" model="ir.ui.view">
        <field name="name">hr.period.search</field>
        <field name="model">hr.period</field>
        <field name="arch" type="xml">
            <search string="Buscar periodo">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]" string="Period" />
                <filter string="Pendiente de cierre" name="draft" domain="[('state', '=', 'draft')]" icon="terp-dialog-close" />
            </search>
        </field>
    </record>
    <record id="action_hr_period" model="ir.actions.act_window">
        <field name="name">Periodos de Payroll</field>
        <field name="res_model">hr.period</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_open': 1}</field>
    </record>
    <menuitem id="menu_action_hr_period" action="action_hr_period" parent="hr_period_configure" sequence="26" />
</odoo>

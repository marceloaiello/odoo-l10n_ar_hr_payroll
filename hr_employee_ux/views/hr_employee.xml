<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- hr.employee inherit form view -->
    <record id="hr_employee_ux.hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <!-- Personal Information Page -->
            <page name="personal_information" position="replace">
                <page name="personal_information" string="InformaciÃ³n Privada" modifiers="{}">
                    <group modifiers="{}">
                        <group string="Citizenship" modifiers="{}">
                            <separator />
                            <field name="country_id" options="{'no_open': True, 'no_create': True}" can_create="true" can_write="true" modifiers="{}" />
                            <field name="place_of_birth" modifiers="{}" />
                            <field name="country_of_birth" can_create="true" can_write="true" modifiers="{}" />
                            <separator />
                            <field name="identification_type_id" can_create="true" can_write="true" modifiers="{}" />
                            <field name="identification_id" modifiers="{}" />
                            <field name="identification_expiry_date" modifiers="{}" />
                            <field name="passport_id" modifiers="{}" />
                            <separator />
                            <field name="gender" modifiers="{}" />
                            <field name="birthday" on_change="1" modifiers="{}" />
                            <field name="age" modifiers="{'readonly':true}" />
                            <field name="marital" modifiers="{}" />
                        </group>
                        <group string="Private Contact" modifiers="{}">
                            <field name="address_home_id" context="{'show_address': 1,'default_type': 'private', 'form_view_ref': 'base.res_partner_view_form_private'}" options="{'always_reload': True, 'highlight_first_line': True}" on_change="1" can_create="true" can_write="true" modifiers="{}" />
                            <field name="private_email" string="Email" modifiers="{'readonly':true}" />
                            <field name="phone" class="o_force_ltr" string="Phone" readonly="True" modifiers="{'readonly':true}" />
                            <field name="bank_account_id" context="{'display_partner':True}" attrs="{'invisible' : [('address_home_id', '=', False)]}" can_create="true" can_write="true" modifiers="{'invisible':[['address_home_id','=',false]]}" />
                            <field name="employee_bank_titular" nolabel="1" readonly="True" attrs="{'invisible' : [('bank_account_id', '=', False)]}" />
                            <field name="employee_bank" nolabel="1" readonly="True" attrs="{'invisible' : [('bank_account_id', '=', False)]}" modifiers="{'invisible':[['bank_account_id','=',false]]}" />
                            <field name="employee_account_number" nolabel="1" readonly="True" attrs="{'invisible' : [('bank_account_id', '=', False)]}" modifiers="{'invisible':[['bank_account_id','=',false]]}" />
                            <field name="employee_cbu" nolabel="1" readonly="True" attrs="{'invisible' : [('bank_account_id', '=', False)]}" modifiers="{'invisible':[['bank_account_id','=',false]]}" />
                        </group>
                        <group string="Emergency" modifiers="{}">
                            <field name="emergency_contact" modifiers="{}" />
                            <field name="emergency_phone" class="o_force_ltr" modifiers="{}" />
                        </group>
                    </group>
                </page>
            </page>
            <!-- Personal Information Page -->
            <!-- Hr Settings Page / Tab -->
            <page name="hr_settings" position="replace">
                <page name="hr_settings" string="HR Settings" modifiers="{}">
                    <group modifiers="{}">
                        <group name="service_information" string="Service Information" modifiers="{}">
                            <field name="service_hire_date" on_change="1" modifiers="{}" />
                            <field name="service_start_date" on_change="1" modifiers="{'readonly':true}" />
                            <field name="service_termination_date" on_change="1" modifiers="{'readonly':true}" />
                            <field name="service_duration" invisible="1" modifiers="{'invisible':true,'readonly':true}" />
                            <label for="service_duration" string="Service Duration" modifiers="{}" />
                            <div modifiers="{}">
                                <field name="service_duration_years" nolabel="1" modifiers="{'readonly':true}" />
                                <span class="ml8 mr8" modifiers="{}">
                                                    year(s)
                                                </span>
                                <field name="service_duration_months" nolabel="1" modifiers="{'readonly':true}" />
                                <span class="ml8 mr8" modifiers="{}">
                                                    month(s)
                                                </span>
                                <field name="service_duration_days" nolabel="1" modifiers="{'readonly':true}" />
                                <span class="ml8" modifiers="{}">
                                                    day(s)
                                                </span>
                            </div>
                        </group>
                        <group string="Attendance" name="identification_group" modifiers="{}">
                            <field name="pin" string="PIN Code" modifiers="{}" />
                            <label for="barcode" modifiers="{}" />
                            <div class="o_row" modifiers="{}">
                                <field name="barcode" modifiers="{}" />
                                <button string="Generate" class="btn btn-link" type="object" name="generate_random_barcode" attrs="{'invisible': [('barcode', '!=', False)]}" modifiers="{'invisible':[['barcode','!=',false]]}" options="{}" />
                                <button name="163" string="Print Badge" class="btn btn-link" type="action" attrs="{'invisible': [('barcode', '=', False)]}" modifiers="{'invisible':[['barcode','=',false]]}" options="{}" />
                            </div>
                            <field name="no_autoclose" modifiers="{}" />
                        </group>
                        <group string="Configuracion Usuario" name="active_group" modifiers="{}">
                            <field name="user_id" string="Usuario Relacionado" on_change="1" can_create="true" can_write="true" modifiers="{}" />
                        </group>
                    </group>
                </page>
            </page>
            <!-- Hr Settings Page / Tab -->
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View Start: Category -->
        <record id="hr_labor_union_category_view_tree" model="ir.ui.view">
            <field name="name">hr.labor_union.category.view.tree</field>
            <field name="model">hr.labor_union.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="categories_prices" />
                    <field name="current_value" />
                </tree>
            </field>
        </record>
        <!-- Tree View End: Category -->

        <!-- Tree View Start: Category Price -->
        <record id="hr_labor_union_category_view_tree" model="ir.ui.view">
            <field name="name">hr.labor_union.category.price.view.tree</field>
            <field name="model">hr.labor_union.category.price</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="from_date" />
                    <field name="to_date" />
                    <field name="value" />
                </tree>
            </field>
        </record>
        <!-- Tree View End: Category Price -->

        <!-- Form View Start: Category -->
        <record id="action_hr_labor_union_category_form" model="ir.ui.view">
            <field name="name">hr.labor_union.category.form</field>
            <field name="model">hr.labor_union.category</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title pr-0" name="title">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" placeholder="Categoria C.C.T" />
                        </h1>
                    </div>
                    <group string="Valores de la Categoria">
                        <field name="categories_prices" context="{'default_labor_union_category_id': active_id}" nolabel="1" />
                    </group>
                </form>
            </field>
        </record>
        <!-- Form View End: Category-->

        <!-- Form View Start: Category Price -->
        <record id="action_hr_labor_union_category_price_form" model="ir.ui.view">
            <field name="name">hr.labor_union.category.price.form</field>
            <field name="model">hr.labor_union.category.price</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="labor_union_category_id" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="from_date" />
                        </group>
                        <group>
                            <field name="to_date" />
                        </group>
                    </group>
                    <group>
                        <field name="value" />
                    </group>
                </form>
            </field>
        </record>
        <!-- Form View End: Category Price -->
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Menu Configuration -->
        <menuitem id="hr.menu_labor_union_contract" name="C.C.T / Sindicatos" parent="hr.menu_hr_employee_payroll" action="actions_hr_labor_union" sequence="3"/>

        <!-- Main View Start -->
        <record id="actions_hr_labor_union" model="ir.actions.act_window">
            <field name="name">C.C.T / Sindicatos</field>
            <field name="res_model">hr.labor_union</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Todavia no se registraron Sindicatos / C.C.T. Ingrese uno nuevo.
                </p>
            </field>
        </record>
        <!-- Main View End -->

        <!-- Tree View Start-->
        <record id="hr_labor_union_view_tree" model="ir.ui.view">
            <field name="name">hr.labor_union.view.tree</field>
            <field name="model">hr.labor_union</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="sindicato"/>
                    <field name="convenio"/>
                    <field name="cct_categories" widget='one2many'/>
                    <field name="svco_current_value" widget='monetary'/>
                </tree>
            </field>
        </record>
        <!-- Tree View End-->

        <!-- Form View Start -->
        <record id="action_hr_labor_union_form" model="ir.ui.view">
            <field name="name">hr.labor_union.form</field>
            <field name="model">hr.labor_union</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title pr-0" name="title">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" placeholder="C.C.T / Sindicato"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sindicato"/>
                            <field name="convenio"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="labor_union_categories" string="Categorias C.C.T">
                            <group string="Categorias Convenio Colectivo de Trabajo (CCT)">
                                <field name="cct_categories" context="{'default_labor_union_id': active_id}" nolabel="1"/>
                            </group>
                        </page>
                        <page name="svco-seguro" string="Seguro S.V.C.O">
                            <group string="Seguro de Vida Colectivo (S.V.C.O)">
                                <field name="cct_svco_values" context="{'default_labor_union_id': active_id}" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </form>
                <!-- Form Chatter Widget -->
                <div class="oe_chatter" modifiers="{}">
                    <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                    <field name="message_ids" widget="mail_thread" modifiers="{}" options="{'display_log_button': True}"/>
                </div>
                <!-- Form Chatter Widget -->
            </field>
        </record>
        <!-- Form View End -->
    </data>
</odoo>

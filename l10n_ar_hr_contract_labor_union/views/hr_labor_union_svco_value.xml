<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View Start-->
        <record id="hr_labor_union_svco_value_view_tree" model="ir.ui.view">
            <field name="name">hr.labor_union.svco_value.view.tree</field>
            <field name="model">hr.labor_union.svco_value</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="from_date" />
                    <field name="to_date" />
                    <field name="name" />
                    <field name="value" />
                </tree>
            </field>
        </record>
        <!-- Tree View End-->

        <!-- Form View Start -->
        <record id="action_hr_labor_union_svco_value_view_form" model="ir.ui.view">
            <field name="name">hr.labor_union.svco_value.form</field>
            <field name="model">hr.labor_union.svco_value</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Seguro de Vida Obligatorio (SVCO)" cols="2">
                        <label></label>
                        <field name="name" />
                        <field name="labor_union_id"/>
                    </group>
                    <group name="dates_info" cols="2">
                        <field name="from_date" />
                        <field name="to_date" />
                    </group>
                    <group>
                        <field name="value" />
                    </group>
                </form>
            </field>
        </record>
        <!-- Form View End -->
    </data>
</odoo>

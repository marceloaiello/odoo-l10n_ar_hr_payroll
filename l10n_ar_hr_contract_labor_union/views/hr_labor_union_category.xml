<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View Start: Categories -->
        <record id="hr_labor_union_category_view_tree" model="ir.ui.view">
            <field name="name">hr.labor_union.category.view.tree</field>
            <field name="model">hr.labor_union.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="categories_prices" />
                    <field name="current_value" />
                </tree>
            </field>
        </record>
        <!-- Tree View End-->

        <!-- Form View Start -->
        <record id="action_hr_labor_union_category_form" model="ir.ui.view">
            <field name="name">hr.labor_union.category.form</field>
            <field name="model">hr.labor_union.category</field>
            <field name="arch" type="xml">
                <form>
                    <div class="oe_title pr-0" name="title">
                        <h1 class="d-flex flex-row justify-content-between">
                            <field name="name" placeholder="Categoria C.C.T"/>
                        </h1>
                    </div>
                    <group string="Seguro de Vida Colectivo (S.V.C.O)">
                        <field name="categories_prices" context="{'default_labor_union_category_id': active_id}" nolabel="1"/>
                    </group>
                </form>
            </field>
        </record>
        <!-- Form View End -->
    </data>
</odoo>

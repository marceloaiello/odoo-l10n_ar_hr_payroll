<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rules_UOM1" model="hr.salary.rule">
        <field name="name">UOM SINDICAL (SOLIDARIO)</field>
        <field name="code">UOM1</field>
        <field name="sequence">20900</field>
        <field name="category_id" ref="l10n_ar_payroll.categories_RET" />
        <field name="active">true</field>
        <field name="appears_on_payslip">true</field>
        <field name="note">Aporte sindical UOM - Solidario (2.5%)</field>
        <!-- Condition Select -->
        <field name="condition_select">none</field>
        <!-- Amount Select -->
        <field name="amount_select">code</field>
        <field name="amount_python_compute">
result_rate = -2.5
result = categories.TGROSS
        </field>
    </record>
    <record id="rules_UOM2" model="hr.salary.rule">
        <field name="name">UOM SINDICAL (AFILIADO)</field>
        <field name="code">UOM2</field>
        <field name="sequence">20900</field>
        <field name="category_id" ref="l10n_ar_payroll.categories_RET" />
        <field name="active">true</field>
        <field name="appears_on_payslip">true</field>
        <field name="note">Aporte sindical UOM - Sindical (3%)</field>
        <!-- Condition Select -->
        <field name="condition_select">none</field>
        <!-- Amount Select -->
        <field name="amount_select">code</field>
        <field name="amount_python_compute">
result_rate = -3.00
result = categories.TGROSS
        </field>
    </record>
    <record id="rules_UOMSVCO" model="hr.salary.rule">
        <field name="name">UOM SVCO</field>
        <field name="code">UOMSVCO</field>
        <field name="sequence">20901</field>
        <field name="category_id" ref="l10n_ar_payroll.categories_RET" />
        <field name="active">true</field>
        <field name="appears_on_payslip">true</field>
        <field name="note">Seguro de vida colectivo, sindicato UOM. Importe Fijo (Mensual).</field>
        <!-- Condition Select -->
        <field name="condition_select">none</field>
        <!-- Amount Select -->
        <field name="amount_select">code</field>
        <field name="amount_python_compute">
result_rate = -100.00
result = contract.cct_id.svco_current_value
        </field>
    </record>
    <record id="rules_IMGR" model="hr.salary.rule">
        <field name="name">IMGR UOM</field>
        <field name="code">IMGR</field>
        <field name="sequence">10590</field>
        <field name="category_id" ref="l10n_ar_payroll.categories_ADIC" />
        <field name="active">true</field>
        <field name="appears_on_payslip">true</field>
        <!-- Condition Select -->
        <field name="condition_select">none</field>
        <!-- Amount Select -->
        <field name="amount_select">code</field>
        <field name="amount_python_compute">
imgr = 60720.00
base_calculo = categories.GROSS - categories.EXT
if imgr > base_calculo:
    diference = imgr - categories.GROSS
    result = diference
else:
    result = 0.00
        </field>
    </record>
    <record id="AR-DEFAULT-H" model="hr.payroll.structure">
        <field name="name"> ( AR-UOM-JOR ) SINDICATO UOM MERTALURGICOS - JORNALIZADOS</field>
        <field name="code">AR-UOM-JOR</field>
        <field name="company_id" ref="base.main_company" />
        <field name="parent_id" ref='l10n_ar_payroll.AR-DEFAULT-H' />
        <field eval="[(6, 0, [  ref('l10n_ar_payroll_lu_uom.rules_UOM1'),
                                ref('l10n_ar_payroll_lu_uom.rules_UOMSVCO')])]" name="rule_ids" />
    </record>
    <record id="AR-DEFAULT-M" model="hr.payroll.structure">
        <field name="name"> ( AR-UOM-JOR ) SINDICATO UOM MERTALURGICOS - MENSUALIZADOS</field>
        <field name="code">AR-UOM-MEN</field>
        <field name="company_id" ref="base.main_company" />
        <field name="parent_id" ref='l10n_ar_payroll.AR-DEFAULT-M' />
        <field eval="[(6, 0, [  ref('l10n_ar_payroll_lu_uom.rules_UOM1'),
                                ref('l10n_ar_payroll_lu_uom.rules_IMGR'),
                                ref('l10n_ar_payroll_lu_uom.rules_UOMSVCO')])]" name="rule_ids" />
    </record>
</odoo>

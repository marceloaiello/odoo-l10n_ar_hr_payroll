    <record id="rules_IMGR" model="hr.salary.rule">
        <field name="name">IMGR UOM</field>
        <field name="code">10590</field>
        <field name="sequence">10590</field>
        <field name="category_id" ref="l10n_ar_payroll.categories_931ADIC" />
        <field name="active">true</field>
        <field name="appears_on_payslip">true</field>
        <!-- Condition Select -->
        <field name="condition_select">python</field>
        <field name="condition_python">
result = (contract.schedule_pay == 'monthly') or (payslip.from_date.day == 16) or False
        </field>
        <!-- Amount Select -->
        <field name="amount_select">code</field>
        <field name="amount_python_compute">
result = payslip.compute_imgr(contract=contract, payslip=payslip, categories=categories)
        </field>
